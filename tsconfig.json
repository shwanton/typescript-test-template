{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": [
      "ES2019"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false,
    "noImplicitAny": true,
    "outDir": "dist",
    "preserveConstEnums": true,
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "target": "ES2019",
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "./src/__tests__"]
}
