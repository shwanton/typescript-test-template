{
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noEmit": false,
    "noImplicitAny": true,
    "outDir": "dist",
    "preserveConstEnums": true,
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "target": "esnext"
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "./src/__tests__"]
}
